<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">ORBIS</Platform>
    <ProductVersion>8.0.30703</ProductVersion>
    <SchemaVersion>2.0</SchemaVersion>
    <ProjectGuid>$guid1$</ProjectGuid>
    <OutputType>Exe</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>$safeprojectname$</RootNamespace>
    <AssemblyName>$safeprojectname$</AssemblyName>
    <FileAlignment>512</FileAlignment>
    <AotOutputPath>$(ProjectDir)..\Launcher\bin\$(Configuration)</AotOutputPath>
    <AotIntermediateOutputPath>$(ProjectDir)..\Launcher\aot\$(Configuration)</AotIntermediateOutputPath>
    <AotMachineName>$(MONO_PS4_BUILDER)</AotMachineName>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|ORBIS' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\ORBIS\Debug\</OutputPath>
    <IntermediateOutputPath>obj\ORBIS\Debug\</IntermediateOutputPath>
    <DefineConstants>DEBUG;TRACE;PLAYSTATION4</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|ORBIS' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>bin\ORBIS\Release\</OutputPath>
    <IntermediateOutputPath>obj\ORBIS\Release\</IntermediateOutputPath>
    <DefineConstants>TRACE;PLAYSTATION4</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Game1.cs" />
    <Compile Include="Program.cs" />
    <Compile Include="Properties\AssemblyInfo.cs" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Content\" />
  </ItemGroup>
  <ItemGroup>
    <None Include="$(MSBuildProgramFiles32)\MonoGame.PS4\v3.0\Assemblies\PlayStation4\scePlayStation4.prx">
      <Link>scePlayStation4.prx</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="MonoGame.Framework">
      <HintPath>$(MSBuildProgramFiles32)\MonoGame.PS4\v3.0\Assemblies\PlayStation4\MonoGame.Framework.dll</HintPath>
    </Reference>
    <Reference Include="Sce.PlayStation4">
      <HintPath>$(MSBuildProgramFiles32)\MonoGame.PS4\v3.0\Assemblies\PlayStation4\Sce.PlayStation4.dll</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <Content Include="ReadMe.txt" />
  </ItemGroup>
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
  <Import Project="$(MSBuildExtensionsPath)\MonoGame.PS4\v3.0\Mono.PS4.targets" />
  <!-- To modify your build process, add your task inside one of the targets below and uncomment it. 
       Other similar extension points exist, see Microsoft.Common.targets.
  <Target Name="BeforeBuild">
  </Target>
  <Target Name="AfterBuild">
  </Target>
  -->
  <!-- Copy content and PRX files over to the Launcher project -->
  <Target Name="CollectLauncherFiles" AfterTargets="MonoPS4_AOTCompile">
	  <ItemGroup>
		<ContentFiles Include="$(OutputPath)Content\**\*.*" />
		<PrxFiles Include="$(OutputPath)*.prx" />
	  </ItemGroup>
  </Target>
  <Target	Name="CopyContentFiles" 
			AfterTargets="CollectLauncherFiles" 
			Inputs="@(ContentFiles)" 
			Outputs="..\Launcher\bin\$(Configuration)\Content\%(RecursiveDir)%(Filename)%(Extension)">
    <Copy SourceFiles="@(ContentFiles)" DestinationFolder="..\Launcher\bin\$(Configuration)\Content\%(RecursiveDir)" />
  </Target>
  <Target	Name="CopyPrxFiles" 
			AfterTargets="CollectLauncherFiles" 
			Inputs="@(PrxFiles)" 
			Outputs="..\Launcher\bin\$(Configuration)\%(Filename)%(Extension)">
    <Copy SourceFiles="@(PrxFiles)" DestinationFolder="..\Launcher\bin\$(Configuration)\" />
  </Target>
</Project>