<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">ORBIS</Platform>
    <ProductVersion>8.0.30703</ProductVersion>
    <SchemaVersion>2.0</SchemaVersion>
    <ProjectGuid>$guid1$</ProjectGuid>
    <OutputType>Exe</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>$safeprojectname$</RootNamespace>
    <AssemblyName>$safeprojectname$</AssemblyName>
    <FileAlignment>512</FileAlignment>
    <NoCompilerStandardLib>true</NoCompilerStandardLib>
    <NoStdLib>true</NoStdLib>
    <MonoForPS4>$([System.Environment]::GetEnvironmentVariable("MONO_PS4"))</MonoForPS4>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|ORBIS' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\ORBIS\Debug\</OutputPath>
    <IntermediateOutputPath>obj\ORBIS\Debug\</IntermediateOutputPath>
    <DefineConstants>DEBUG;TRACE;PLAYSTATION4</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
    <MonoDebugFlag>--debug</MonoDebugFlag>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|ORBIS' ">
    <PlatformTarget>AnyCPU</PlatformTarget>
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>bin\ORBIS\Release\</OutputPath>
    <IntermediateOutputPath>obj\ORBIS\Release\</IntermediateOutputPath>
    <DefineConstants>TRACE;PLAYSTATION4</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
    <MonoDebugFlag>
    </MonoDebugFlag>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Game1.cs" />
    <Compile Include="Program.cs" />
    <Compile Include="Properties\AssemblyInfo.cs" />
  </ItemGroup>
  <ItemGroup>
    <_ExplicitReference Include="$(MonoForPS4)\bcl\mscorlib.dll">
      <Link>bcl\mscorlib.dll</Link>
    </_ExplicitReference>
    <_ExplicitReference Include="$(MonoForPS4)\bcl\System.dll">
      <Link>bcl\System.dll</Link>
    </_ExplicitReference>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Content\" />
  </ItemGroup>
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
  <!-- To modify your build process, add your task inside one of the targets below and uncomment it. 
       Other similar extension points exist, see Microsoft.Common.targets.
  <Target Name="BeforeBuild">
  </Target>
  -->
  <Target Name="AfterBuild">
    <MakeDir Directories="$(SolutionDir)Launcher\aot\$(Configuration)" />
    <Exec Command="$(MonoForPS4)\bin\psbuild.exe $(MonoDebugFlag) --incremental=$(ProjectGuid)_$(Configuration) $(MonoForPS4)\bcl $(TargetDir) $(SolutionDir)Launcher\aot\$(Configuration) $(SolutionDir)Launcher\bin\$(Configuration) $(MONO_PS4_BUILDER)" />
  </Target>
</Project>